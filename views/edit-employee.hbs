<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <h1 class="space-top text-center">Edit Employee</h1>
            <form role="form" method="post" action="/edit-employee/{{employee._id}}">

                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" name="username"  value="{{employee.name}}">
                </div>
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" name="email" value="{{employee.email}}">
                </div>
                <div class="form-group">
                    <label for="password">Mobile No:</label>
                    <input type="text" class="form-control" name="mobileNo" value="{{employee.mobileNo}}">
                </div>
                <div class="form-group">
                    <label for="date">Hire Date</label>
                    <input type="date" name="hireDate" value="{{employee.hireDate}}">
                </div>

                <button type="submit" class="btn btn-success">Submit</button>

            </form>
            <hr />

        </div>
    </div>
</div>